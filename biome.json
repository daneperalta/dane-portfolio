{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": { "recommended": true },
      "performance": { "recommended": true },
      "a11y": {
        "recommended": true,
        "noRedundantAlt": "off",
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off",
        "useButtonType": "off",
        "useSemanticElements": "off",
        "noSvgWithoutTitle": "off",
        "useFocusableInteractive": "off",
        "useAriaPropsForRole": "off"
      },
      "suspicious": {
        "recommended": true,
        "noArrayIndexKey": "off",
        "noUnknownAtRules": "off"
      },
      "correctness": {
        "recommended": true,
        "noUnusedFunctionParameters": "off",
        "noUnusedVariables": "warn"
      },
      "security": {
        "recommended": true,
        "noDangerouslySetInnerHtml": "off"
      },
      "style": {
        "recommended": true,
        "noNonNullAssertion": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  },
  "json": { "formatter": { "enabled": true } },
  "css": { "parser": { "tailwindDirectives": true } },
  "overrides": [
    {
      "includes": ["*.config.js", "*.config.ts", "next.config.ts", "wrangler.jsonc"],
      "formatter": { "lineWidth": 120 }
    }
  ]
}
